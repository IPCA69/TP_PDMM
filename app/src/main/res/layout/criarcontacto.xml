<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp">

    <Button
        android:id="@+id/btContactoImport"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="140dp"
        android:text="Import" />

    <Button
        android:id="@+id/btContactoNew"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="72dp"
        android:text="New" />


    <Button
        android:id="@+id/btContactoEdit"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Edit" />



    <ScrollView
        android:layout_width="371dp"
        android:layout_height="546dp"
        android:layout_marginBottom="50dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:hint="nome de contacto" />

            <Spinner
                android:id="@+id/descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nome"
                android:layout_marginTop="20sp"
                android:hint="Tipo de contacto" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/descricao"
                android:layout_marginTop="20sp"
                android:hint="email"

                />
            <Button
                android:id="@+id/btDeleteContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_marginTop="20sp"
                android:text="Delete" />

            <Button
                android:id="@+id/btSaveContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btDeleteContacto"
                android:layout_marginTop="20sp"
                android:text="Save" />

            <Button
                android:id="@+id/btViewContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btSaveContacto"
                android:layout_marginTop="20sp"
                android:text="View" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"

    tools:context="com.example.fragment.TurmasFragment"
    android:orientation="vertical">


    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Aulas"
        android:layout_marginTop="60sp"
        android:id="@+id/viewaulas"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewaulas"
        android:text="View Disciplinas"
        android:layout_marginTop="20sp"
        android:id="@+id/viewdisciplinas"
        />
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/llayout"
        android:layout_below="@id/viewdisciplinas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>



</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp">

    <Button
        android:id="@+id/btImportDisciplina"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="170dp"
        android:text="Import" />

    <Button
        android:id="@+id/btNewDisciplina"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="85dp"
        android:text="New" />


    <Button
        android:id="@+id/btEditDisciplina"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Edit" />


    <ScrollView
        android:layout_width="371dp"
        android:layout_height="546dp"
        android:layout_marginBottom="35dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:hint="Nome de Disciplina" />

            <EditText
                android:id="@+id/acronimo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nome"
                android:layout_marginTop="20sp"
                android:hint="Acronimo" />

            <Spinner
                android:id="@+id/curso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/acronimo"
                android:layout_marginTop="20sp"
                android:hint="Curso" />


            <EditText
                android:id="@+id/semestre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/curso"
                android:layout_marginTop="20sp"
                android:hint="Semestre"
                android:inputType="number" />

            <Button
                android:id="@+id/btDeleteDisciplina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sumario"
                android:layout_marginTop="20sp"
                android:text="Delete" />

            <Button
                android:id="@+id/btSaveDisciplina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btDeleteAula"
                android:layout_marginTop="20sp"
                android:text="Save" />

            <Button
                android:id="@+id/btViewDisciplina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btSaveAula"
                android:layout_marginTop="20sp"
                android:text="View" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>